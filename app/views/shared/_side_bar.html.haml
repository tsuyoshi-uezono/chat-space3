  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__icons
        = link_to new_group_path, class: "icon" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "icon" do
          = icon('fas', 'user-cog')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
